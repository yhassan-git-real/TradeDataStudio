<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Form Card Styling -->
    <Style Selector="Border.form-card">
        <Setter Property="Padding" Value="14"/>
        <Setter Property="Margin" Value="0,0,12,12"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#162642" Offset="0"/>
                    <GradientStop Color="#1E3456" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#2D4366"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="BoxShadow" Value="0 4 12 0 #00000040"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="MaxWidth" Value="340"/>
        <Setter Property="MinWidth" Value="240"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.25"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.25"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Border.form-card:pointerover">
        <Setter Property="BorderBrush" Value="#3B82F6"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#1E3456" Offset="0"/>
                    <GradientStop Color="#2D4366" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <Style Selector="Border.form-card-wide">
        <Setter Property="MaxWidth" Value="760"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    
</Styles>
