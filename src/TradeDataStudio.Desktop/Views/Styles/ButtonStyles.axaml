<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Button Base Styling -->
    <Style Selector="Button">
        <Setter Property="Margin" Value="6,4"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#2563EB" Offset="0"/>
                    <GradientStop Color="#1E40AF" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#1E40AF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="Foreground" Value="#F1F5F9"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button:pointerover">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#1E40AF" Offset="0"/>
                    <GradientStop Color="#1E3A8A" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#1E3A8A"/>
        <Setter Property="RenderTransform" Value="scale(1.02)"/>
    </Style>
    <Style Selector="Button:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>
    
    <!-- Primary Button -->
    <Style Selector="Button.primary-button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#10B981" Offset="0"/>
                    <GradientStop Color="#059669" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#059669"/>
    </Style>
    <Style Selector="Button.primary-button:pointerover">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#059669" Offset="0"/>
                    <GradientStop Color="#047857" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#047857"/>
    </Style>
    
    <!-- Secondary Button -->
    <Style Selector="Button.secondary-button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#475569" Offset="0"/>
                    <GradientStop Color="#334155" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#334155"/>
    </Style>
    <Style Selector="Button.secondary-button:pointerover">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#334155" Offset="0"/>
                    <GradientStop Color="#1E293B" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#1E293B"/>
    </Style>
    
    <!-- Success Button -->
    <Style Selector="Button.success-button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#06B6D4" Offset="0"/>
                    <GradientStop Color="#0891B2" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#0891B2"/>
    </Style>
    <Style Selector="Button.success-button:pointerover">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#0891B2" Offset="0"/>
                    <GradientStop Color="#0E7490" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#0E7490"/>
    </Style>
    
    <!-- Action Button Base -->
    <Style Selector="Button.action-button">
        <Setter Property="Background" Value="#1E3456"/>
        <Setter Property="BorderBrush" Value="#2D4366"/>
        <Setter Property="Foreground" Value="#60A5FA"/>
    </Style>
    <Style Selector="Button.action-button:pointerover">
        <Setter Property="Background" Value="#2D4366"/>
        <Setter Property="BorderBrush" Value="#3B82F6"/>
    </Style>
    <Style Selector="Button.action-button:disabled">
        <Setter Property="Background" Value="#162642"/>
        <Setter Property="Foreground" Value="#475569"/>
        <Setter Property="BorderBrush" Value="#2D4366"/>
        <Setter Property="Opacity" Value="0.5"/>
    </Style>
    
    <!-- Action Button Primary -->
    <Style Selector="Button.action-button.primary">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#2563EB" Offset="0"/>
                    <GradientStop Color="#1E40AF" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#1E40AF"/>
        <Setter Property="Foreground" Value="#F1F5F9"/>
    </Style>
    <Style Selector="Button.action-button.primary:pointerover">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#1E40AF" Offset="0"/>
                    <GradientStop Color="#1E3A8A" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#1E3A8A"/>
    </Style>
    
    <!-- Action Button Success -->
    <Style Selector="Button.action-button.success">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#10B981" Offset="0"/>
                    <GradientStop Color="#059669" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#059669"/>
        <Setter Property="Foreground" Value="#F1F5F9"/>
    </Style>
    <Style Selector="Button.action-button.success:pointerover">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#059669" Offset="0"/>
                    <GradientStop Color="#047857" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#047857"/>
    </Style>
    
    <!-- Action Button Neutral -->
    <Style Selector="Button.action-button.neutral">
        <Setter Property="Background" Value="#1E3456"/>
        <Setter Property="BorderBrush" Value="#2D4366"/>
        <Setter Property="Foreground" Value="#94A3B8"/>
    </Style>
    <Style Selector="Button.action-button.neutral:pointerover">
        <Setter Property="Background" Value="#2D4366"/>
        <Setter Property="BorderBrush" Value="#3B82F6"/>
        <Setter Property="Foreground" Value="#E2E8F0"/>
    </Style>
    
</Styles>
