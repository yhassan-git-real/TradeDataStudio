<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Button Base Styling - Neon Glass Effect -->
    <Style Selector="Button">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background" Value="#20064E5E"/>
        <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="#40064E5E"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ElectricBlue}"/>
        <Setter Property="RenderTransform" Value="scale(1.02)"/>
    </Style>

    <Style Selector="Button:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>

    <!-- Primary Button - Neon Cyan -->
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="#2000E5FF"/>
        <Setter Property="BorderBrush" Value="#00E5FF"/>
        <Setter Property="Foreground" Value="#E0F7FA"/>
    </Style>
    <Style Selector="Button.primary:pointerover">
        <Setter Property="Background" Value="#4000E5FF"/>
    </Style>

    <!-- Danger Button - Red -->
    <Style Selector="Button.danger">
        <Setter Property="Background" Value="#20EF4444"/>
        <Setter Property="BorderBrush" Value="#EF4444"/>
    </Style>
    <Style Selector="Button.danger:pointerover">
        <Setter Property="Background" Value="#40EF4444"/>
        <Setter Property="BorderBrush" Value="#FF6B6B"/>
    </Style>

    <!-- Accent Button - Purple -->
    <Style Selector="Button.accent">
        <Setter Property="Background" Value="#208B5CF6"/>
        <Setter Property="BorderBrush" Value="#8B5CF6"/>
    </Style>
    <Style Selector="Button.accent:pointerover">
        <Setter Property="Background" Value="#408B5CF6"/>
    </Style>

    <!-- Warning Button - Orange -->
    <Style Selector="Button.warning">
        <Setter Property="Background" Value="#20F59E0B"/>
        <Setter Property="BorderBrush" Value="#F59E0B"/>
    </Style>
    <Style Selector="Button.warning:pointerover">
        <Setter Property="Background" Value="#40F59E0B"/>
    </Style>

    <!-- Success Button - Green -->
    <Style Selector="Button.success">
        <Setter Property="Background" Value="#2010B981"/>
        <Setter Property="BorderBrush" Value="#10B981"/>
    </Style>
    <Style Selector="Button.success:pointerover">
        <Setter Property="Background" Value="#4010B981"/>
    </Style>
    
</Styles>
