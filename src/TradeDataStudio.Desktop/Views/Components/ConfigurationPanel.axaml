<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TradeDataStudio.Desktop.ViewModels"
             x:Class="TradeDataStudio.Desktop.Views.Components.ConfigurationPanel"
             x:DataType="vm:MainWindowViewModel">
    
    <Border Background="#0F1D35"
            BorderBrush="#2D4366"
            BorderThickness="1"
            CornerRadius="8"
            Padding="10"
            Margin="4"
            BoxShadow="0 4 12 0 #00000050">
        <StackPanel Spacing="8">
            <!-- Header - Reduced Size -->
            <StackPanel Orientation="Horizontal" Margin="0" VerticalAlignment="Center" Spacing="6">
                <Border Width="24" Height="24" CornerRadius="12" Background="#1E3456" VerticalAlignment="Center" Padding="2">
                    <TextBlock Text="âš™" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#60A5FA" Margin="0"/>
                </Border>
                <StackPanel>
                    <TextBlock Text="Configuration" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#F1F5F9"/>
                    <TextBlock Text="Set up the operation, output, and export details." 
                               FontSize="10" 
                               Foreground="#CBD5E1"/>
                </StackPanel>
            </StackPanel>
            <Border Height="1" Background="#2D4366" Margin="0,0,0,4"/>
            
            <!-- Operation Mode -->
            <StackPanel Spacing="4">
                <TextBlock Text="Operation Mode" FontSize="12" FontWeight="SemiBold" Foreground="#F1F5F9" Margin="0,0,0,2"/>
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <RadioButton x:Name="ExportModeRadio"
                                 Content="Export"
                                 Margin="0"
                                 IsChecked="{Binding IsExportMode}"
                                 GroupName="OperationMode"
                                 FontSize="11"/>
                    <RadioButton x:Name="ImportModeRadio"
                                 Content="Import"
                                 Margin="0"
                                 IsChecked="{Binding IsImportMode}"
                                 GroupName="OperationMode"
                                 FontSize="11"/>
                </StackPanel>
            </StackPanel>

            <!-- Row 2: Stored Procedure, Output Tables, and File Format -->
            <Grid ColumnDefinitions="0.85*,12,0.85*,12,0.85*">
                <!-- Stored Procedure -->
                <StackPanel Grid.Column="0" Spacing="3">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Stored Procedure" 
                                   FontSize="11" 
                                   FontWeight="SemiBold"
                                   Foreground="#E2E8F0"
                                   TextTrimming="CharacterEllipsis"
                                   ToolTip.Tip="Stored Procedure - Select the stored procedure to execute"/>
                    </StackPanel>
                    <!-- ComboBox with conditional red border -->
                    <Border BorderBrush="#EF4444"
                            BorderThickness="2"
                            CornerRadius="4"
                            IsVisible="{Binding IsStoredProcedureValidationError}">
                        <ComboBox x:Name="StoredProcedureDropdown"
                                  ItemsSource="{Binding AvailableStoredProcedures}"
                                  SelectedItem="{Binding SelectedStoredProcedure}"
                                  PlaceholderText="Select stored procedure..."
                                  FontSize="11"
                                  Height="38"
                                  Padding="8,6"
                                  Margin="0"
                                  HorizontalAlignment="Stretch"
                                  VerticalContentAlignment="Center"
                                  MaxDropDownHeight="300"
                                  IsEnabled="True"
                                  ToolTip.Tip="Choose the stored procedure to execute">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}" FontSize="10" TextTrimming="CharacterEllipsis" Padding="4,2"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Border>
                    <!-- ComboBox without red border when valid -->
                    <ComboBox x:Name="StoredProcedureDropdownValid"
                              ItemsSource="{Binding AvailableStoredProcedures}"
                              SelectedItem="{Binding SelectedStoredProcedure}"
                              PlaceholderText="Select stored procedure..."
                              FontSize="11"
                              Height="38"
                              Padding="8,6"
                              Margin="0"
                              HorizontalAlignment="Stretch"
                              VerticalContentAlignment="Center"
                              MaxDropDownHeight="300"
                              IsEnabled="True"
                              ToolTip.Tip="Choose the stored procedure to execute"
                              IsVisible="{Binding !IsStoredProcedureValidationError}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" FontSize="10" TextTrimming="CharacterEllipsis" Padding="4,2"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <!-- Validation Error Message -->
                    <TextBlock Text="{Binding StoredProcedureValidationErrorMessage}"
                               FontSize="9"
                               Foreground="#EF4444"
                               TextWrapping="Wrap"
                               IsVisible="{Binding IsStoredProcedureValidationError}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Output Tables -->
                <StackPanel Grid.Column="2" Spacing="3">
                    <TextBlock Text="Output Tables" FontSize="11" FontWeight="SemiBold" Foreground="#E2E8F0"/>
                    <Button x:Name="SelectTablesButton"
                            Content="{Binding SelectTablesButtonText}"
                            Margin="0"
                            Command="{Binding ShowTableSelectionPopupCommand}"
                            FontSize="11"
                            Height="38"
                            Padding="8,6"
                            VerticalContentAlignment="Center"
                            HorizontalAlignment="Stretch"
                            ToolTip.Tip="{Binding SelectTablesButtonTooltip}"/>
                </StackPanel>

                <!-- File Format -->
                <StackPanel Grid.Column="4" Spacing="3">
                    <TextBlock Text="File Format" FontSize="11" FontWeight="SemiBold" Foreground="#E2E8F0"/>
                    <ComboBox x:Name="FormatDropdown"
                              ItemsSource="{Binding AvailableExportFormats}"
                              SelectedItem="{Binding SelectedExportFormat}"
                              PlaceholderText="Choose export format..."
                              FontSize="11"
                              Height="38"
                              Padding="8,6"
                              VerticalContentAlignment="Center"
                              Margin="0"
                              HorizontalAlignment="Stretch"
                              ToolTip.Tip="Select the output file format for export"/>
                </StackPanel>
            </Grid>

            <!-- Row 3: Parameters and Output Location -->
            <StackPanel Spacing="4">
                <TextBlock Text="Parameters" FontSize="12" FontWeight="SemiBold" Foreground="#F1F5F9" Margin="0,4,0,2"/>
                <Grid ColumnDefinitions="0.85*,12,0.85*,12,0.85*">
                    <!-- Start Period -->
                    <StackPanel Grid.Column="0" Spacing="3">
                        <TextBlock Text="Start Period" FontSize="11" FontWeight="SemiBold" Foreground="#E2E8F0"/>
                        <TextBox x:Name="StartPeriodBox"
                                 Text="{Binding StartPeriod}"
                                 Watermark="YYYYMMDD (e.g., 20241127)"
                                 FontSize="11"
                                 Height="32"
                                 Padding="8,6"
                                 VerticalContentAlignment="Center"
                                 Margin="0"
                                 ToolTip.Tip="Enter start date in YYYYMMDD format (e.g., 20241127)"/>
                    </StackPanel>
                    
                    <!-- End Period -->
                    <StackPanel Grid.Column="2" Spacing="3">
                        <TextBlock Text="End Period" FontSize="11" FontWeight="SemiBold" Foreground="#E2E8F0"/>
                        <TextBox x:Name="EndPeriodBox"
                                 Text="{Binding EndPeriod}"
                                 Watermark="YYYYMMDD (e.g., 20241127)"
                                 FontSize="11"
                                 Height="32"
                                 Padding="8,6"
                                 VerticalContentAlignment="Center"
                                 Margin="0"
                                 ToolTip.Tip="Enter end date in YYYYMMDD format (e.g., 20241127)"/>
                    </StackPanel>

                    <!-- Output Location -->
                    <StackPanel Grid.Column="4" Spacing="3">
                        <TextBlock Text="Output Location" FontSize="11" FontWeight="SemiBold" Foreground="#E2E8F0"/>
                        <!-- Checkbox and Browse Button Row -->
                        <Grid ColumnDefinitions="*,Auto">
                            <CheckBox Grid.Column="0"
                                      Content="Use Custom Output Location"
                                      IsChecked="{Binding UseCustomLocation}"
                                      FontSize="10"
                                      Margin="0"
                                      VerticalAlignment="Center"
                                      ToolTip.Tip="Check to specify a custom output location"/>
                            <Button Grid.Column="1"
                                    Command="{Binding BrowseOutputLocationCommand}"
                                    Height="32"
                                    Padding="6,0"
                                    VerticalContentAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    Margin="8,0,0,0"
                                    ToolTip.Tip="Browse for output folder">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="ðŸ“" FontSize="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="Browse" FontSize="10" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <!-- Info text when custom location is not enabled -->
                        <TextBlock Text="Default: exports/export (from JSON configuration)"
                                   FontSize="9"
                                   Foreground="#94A3B8"
                                   IsVisible="{Binding !UseCustomLocation}"
                                   Margin="0,2,0,0"/>
                        <!-- Custom textbox when enabled -->
                        <TextBox x:Name="CustomOutputLocationBox"
                                 Text="{Binding CustomOutputLocation}"
                                 Watermark="Custom output path (e.g., C:\exports\data)"
                                 FontSize="11"
                                 Height="32"
                                 Padding="8,6"
                                 VerticalContentAlignment="Center"
                                 Margin="0"
                                 IsVisible="{Binding UseCustomLocation}"
                                 ToolTip.Tip="Enter custom output path (e.g., C:\\exports\\data)"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Border>
    
</UserControl>
