<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TradeDataStudio.Desktop.ViewModels"
             x:Class="TradeDataStudio.Desktop.Views.Components.ActivityLogPanel"
             x:DataType="vm:MainWindowViewModel">
    
    <Border Classes="section">
        <StackPanel>
            <!-- Header with Clear button and Live Operation Status -->
            <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,0,0,0" VerticalAlignment="Center">
                <TextBlock Grid.Column="0"
                           Text="Recent Activity" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource PrimaryText}"
                           VerticalAlignment="Center"/>
                
                <!-- Live Operation Status Indicator (beside header) -->
                <StackPanel Grid.Column="1" 
                           IsVisible="{Binding IsOperationInProgress}"
                           Orientation="Horizontal" 
                           Spacing="6"
                           Margin="12,0,12,0"
                           VerticalAlignment="Center">
                    <TextBlock Text="â—" 
                               FontSize="12" 
                               Foreground="#10B981"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0">
                        <TextBlock.Styles>
                            <Style Selector="TextBlock">
                                <Style.Animations>
                                    <Animation Duration="0:0:1" IterationCount="Infinite">
                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="1.0"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="50%">
                                            <Setter Property="Opacity" Value="0.4"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="1.0"/>
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </TextBlock.Styles>
                    </TextBlock>
                    <TextBlock Text="{Binding CurrentOperationStatus}" 
                               FontSize="11" 
                               FontWeight="SemiBold"
                               Foreground="#D1D5DB"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Grid.Column="2"
                        Content="Clear Activity"
                        Command="{Binding ClearActivityLogsCommand}"
                        ToolTip.Tip="Clear all activity log entries"
                        Classes="danger"
                        Padding="10,6"
                        MinWidth="80"
                        Height="28"
                        FontSize="11"
                        FontWeight="Medium"/>
            </Grid>
            <!-- Separator line below header -->
            <Border Height="1" Background="{DynamicResource DefaultBorder}" Margin="0,6,0,8"/>
            
            <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Border CornerRadius="6" Background="#0A052633" BorderBrush="{DynamicResource DefaultBorder}" BorderThickness="1">
                    <StackPanel>
                        <!-- Table Header - Always Visible -->
                        <Border Background="#15083D4F" BorderBrush="{DynamicResource DefaultBorder}" BorderThickness="0,0,0,1" Padding="0">
                            <Grid ColumnDefinitions="110,75,90,*" MinHeight="32">
                                <!-- Time Header -->
                                <Border Grid.Column="0" BorderBrush="{DynamicResource DefaultBorder}" BorderThickness="0,0,1,0" Padding="10,8">
                                    <TextBlock Text="Time" FontFamily="Consolas" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center"/>
                                </Border>
                                <!-- Mode Header -->
                                <Border Grid.Column="1" BorderBrush="{DynamicResource DefaultBorder}" BorderThickness="0,0,1,0" Padding="10,8">
                                    <TextBlock Text="Mode" FontFamily="Consolas" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center"/>
                                </Border>
                                <!-- Status Header -->
                                <Border Grid.Column="2" BorderBrush="{DynamicResource DefaultBorder}" BorderThickness="0,0,1,0" Padding="10,8">
                                    <TextBlock Text="Status" FontFamily="Consolas" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <!-- Details Header -->
                                <Border Grid.Column="3" Padding="10,8">
                                    <TextBlock Text="Operation Details" FontFamily="Consolas" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Table Rows using ItemsControl for proper data binding -->
                        <ItemsControl ItemsSource="{Binding ActivityLogs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource DefaultBorder}" BorderThickness="0,0,0,1" Padding="0" Background="#0A052633">
                                        <Grid ColumnDefinitions="110,75,90,*" MinHeight="32">
                                            <!-- Time Cell -->
                                            <Border Grid.Column="0" BorderBrush="{DynamicResource DefaultBorder}" BorderThickness="0,0,1,0" Padding="10,6">
                                                <TextBlock Text="{Binding Time}" FontFamily="Consolas" FontSize="11" FontWeight="Medium" Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center" LineHeight="14"/>
                                            </Border>
                                            <!-- Mode Cell -->
                                            <Border Grid.Column="1" BorderBrush="{DynamicResource DefaultBorder}" BorderThickness="0,0,1,0" Padding="10,6">
                                                <TextBlock Text="{Binding Mode}" FontFamily="Consolas" FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource ElectricBlue}" VerticalAlignment="Center" HorizontalAlignment="Center" LineHeight="14"/>
                                            </Border>
                                            <!-- Status Cell -->
                                            <Border Grid.Column="2" BorderBrush="{DynamicResource DefaultBorder}" BorderThickness="0,0,1,0" Padding="10,6">
                                                <TextBlock Text="{Binding Status}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource BrightText}" LineHeight="14" TextWrapping="NoWrap"/>
                                            </Border>
                                            <!-- Details Cell -->
                                            <Border Grid.Column="3" Padding="10,6">
                                                <TextBlock Text="{Binding Details}" FontFamily="Consolas" FontSize="11" Foreground="{DynamicResource PrimaryText}" TextWrapping="Wrap" VerticalAlignment="Center" LineHeight="14"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </StackPanel>
    </Border>
    
</UserControl>
