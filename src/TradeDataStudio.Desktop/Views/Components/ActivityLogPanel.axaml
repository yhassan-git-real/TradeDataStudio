<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TradeDataStudio.Desktop.ViewModels"
             x:Class="TradeDataStudio.Desktop.Views.Components.ActivityLogPanel"
             x:DataType="vm:MainWindowViewModel">
    
    <Border Background="#0F1D35"
            BorderBrush="#2D4366"
            BorderThickness="1"
            CornerRadius="8"
            Padding="14"
            Margin="4"
            BoxShadow="0 4 12 0 #00000050">
        <StackPanel>
            <!-- Header with Clear button -->
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,0">
                <TextBlock Grid.Column="0"
                           Text="Recent Activity" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#E2E8F0"
                           VerticalAlignment="Center"/>
                <Button Grid.Column="1"
                        Content="Clear Activity"
                        Command="{Binding ClearActivityLogsCommand}"
                        ToolTip.Tip="Clear all activity log entries"
                        Background="#EA580C"
                        BorderBrush="#C2410C"
                        Foreground="#F1F5F9"
                        Padding="10,6"
                        MinWidth="80"
                        Height="28"
                        CornerRadius="5"
                        FontSize="11"
                        FontWeight="Medium"/>
            </Grid>
            <!-- Separator line below header -->
            <Border Height="1" Background="#2D4366" Margin="0,6,0,8"/>
            
            <!-- Live Operation Status -->
            <Border IsVisible="{Binding IsOperationInProgress}"
                    Background="#78350F"
                    BorderBrush="#F59E0B"
                    BorderThickness="1.5"
                    CornerRadius="6"
                    Padding="10,8"
                    Margin="0,0,0,8"
                    MinHeight="36">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="â—" 
                               FontSize="14" 
                               Foreground="#FBBF24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0"
                               LineHeight="14">
                        <TextBlock.Styles>
                            <Style Selector="TextBlock">
                                <Style.Animations>
                                    <Animation Duration="0:0:1" IterationCount="Infinite">
                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="1.0"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="50%">
                                            <Setter Property="Opacity" Value="0.3"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="1.0"/>
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </TextBlock.Styles>
                    </TextBlock>
                    <TextBlock Text="{Binding CurrentOperationStatus}" 
                               FontSize="12" 
                               FontWeight="SemiBold"
                               Foreground="#FDE68A"
                               VerticalAlignment="Center"
                               LineHeight="14"/>
                </StackPanel>
            </Border>
            
            <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Border CornerRadius="6" Background="#162642" BorderBrush="#2D4366" BorderThickness="1.5">
                    <StackPanel>
                        <!-- Table Header - Always Visible -->
                        <Border Background="#1E3456" BorderBrush="#2D4366" BorderThickness="0,0,0,1" Padding="0">
                            <Grid ColumnDefinitions="110,75,90,*" MinHeight="32">
                                <!-- Time Header -->
                                <Border Grid.Column="0" BorderBrush="#3B82F6" BorderThickness="0,0,1,0" Padding="10,8">
                                    <TextBlock Text="Time" FontFamily="Consolas" FontSize="12" FontWeight="SemiBold" Foreground="#F1F5F9" VerticalAlignment="Center"/>
                                </Border>
                                <!-- Mode Header -->
                                <Border Grid.Column="1" BorderBrush="#3B82F6" BorderThickness="0,0,1,0" Padding="10,8">
                                    <TextBlock Text="Mode" FontFamily="Consolas" FontSize="12" FontWeight="SemiBold" Foreground="#F1F5F9" VerticalAlignment="Center"/>
                                </Border>
                                <!-- Status Header -->
                                <Border Grid.Column="2" BorderBrush="#3B82F6" BorderThickness="0,0,1,0" Padding="10,8">
                                    <TextBlock Text="Status" FontFamily="Consolas" FontSize="12" FontWeight="SemiBold" Foreground="#F1F5F9" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <!-- Details Header -->
                                <Border Grid.Column="3" Padding="10,8">
                                    <TextBlock Text="Operation Details" FontFamily="Consolas" FontSize="12" FontWeight="SemiBold" Foreground="#F1F5F9" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Table Rows using ItemsControl for proper data binding -->
                        <ItemsControl ItemsSource="{Binding ActivityLogs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#2D4366" BorderThickness="0,0,0,1" Padding="0" Background="#162642">
                                        <Grid ColumnDefinitions="110,75,90,*" MinHeight="32">
                                            <!-- Time Cell -->
                                            <Border Grid.Column="0" BorderBrush="#2D4366" BorderThickness="0,0,1,0" Padding="10,6">
                                                <TextBlock Text="{Binding Time}" FontFamily="Consolas" FontSize="11" FontWeight="Medium" Foreground="#E2E8F0" VerticalAlignment="Center" LineHeight="14"/>
                                            </Border>
                                            <!-- Mode Cell -->
                                            <Border Grid.Column="1" BorderBrush="#2D4366" BorderThickness="0,0,1,0" Padding="10,6">
                                                <TextBlock Text="{Binding Mode}" FontFamily="Consolas" FontSize="11" FontWeight="SemiBold" Foreground="#60A5FA" VerticalAlignment="Center" HorizontalAlignment="Center" LineHeight="14"/>
                                            </Border>
                                            <!-- Status Cell -->
                                            <Border Grid.Column="2" BorderBrush="#2D4366" BorderThickness="0,0,1,0" Padding="10,6">
                                                <TextBlock Text="{Binding Status}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFFFF" LineHeight="14" TextWrapping="NoWrap"/>
                                            </Border>
                                            <!-- Details Cell -->
                                            <Border Grid.Column="3" Padding="10,6">
                                                <TextBlock Text="{Binding Details}" FontFamily="Consolas" FontSize="11" Foreground="#A8B8D1" TextWrapping="Wrap" VerticalAlignment="Center" LineHeight="14"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </StackPanel>
    </Border>
    
</UserControl>
