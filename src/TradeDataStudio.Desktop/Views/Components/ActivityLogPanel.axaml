<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TradeDataStudio.Desktop.ViewModels"
             x:Class="TradeDataStudio.Desktop.Views.Components.ActivityLogPanel"
             x:DataType="vm:MainWindowViewModel">
    
    <Border Background="#0F1D35"
            BorderBrush="#2D4366"
            BorderThickness="1"
            CornerRadius="8"
            Padding="16"
            Margin="4,0,4,8"
            BoxShadow="0 4 12 0 #00000050">
        <StackPanel>
            <!-- Header with Clear button -->
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                <TextBlock Grid.Column="0"
                           Text="Recent Activity" 
                           FontSize="15" 
                           FontWeight="SemiBold" 
                           Foreground="#E2E8F0"
                           VerticalAlignment="Center"/>
                <Button Grid.Column="1"
                        Content="Clear"
                        Command="{Binding ClearActivityLogsCommand}"
                        ToolTip.Tip="Clear all activity log entries"
                        Background="#334155"
                        BorderBrush="#475569"
                        Foreground="#E2E8F0"
                        Padding="10,6"
                        MinWidth="70"
                        Height="28"
                        CornerRadius="4"
                        FontSize="11"
                        FontWeight="Medium"/>
            </Grid>
            
            <!-- Live Operation Status -->
            <Border IsVisible="{Binding IsOperationInProgress}"
                    Background="#78350F"
                    BorderBrush="#F59E0B"
                    BorderThickness="1.5"
                    CornerRadius="6"
                    Padding="14,12"
                    Margin="0,0,0,10"
                    MinHeight="48">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="â—" 
                               FontSize="16" 
                               Foreground="#FBBF24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,0,0"
                               LineHeight="16">
                        <TextBlock.Styles>
                            <Style Selector="TextBlock">
                                <Style.Animations>
                                    <Animation Duration="0:0:1" IterationCount="Infinite">
                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="1.0"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="50%">
                                            <Setter Property="Opacity" Value="0.3"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="1.0"/>
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </TextBlock.Styles>
                    </TextBlock>
                    <TextBlock Text="{Binding CurrentOperationStatus}" 
                               FontSize="13" 
                               FontWeight="SemiBold"
                               Foreground="#FDE68A"
                               VerticalAlignment="Center"
                               LineHeight="18"/>
                </StackPanel>
            </Border>
            
            <ScrollViewer Height="250" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Border CornerRadius="6" Background="#162642" BorderBrush="#2D4366" BorderThickness="1.5">
                    <StackPanel>
                        <!-- Table Header - Always Visible -->
                        <Border Background="#1E3456" BorderBrush="#2D4366" BorderThickness="0,0,0,1" Padding="0">
                            <Grid ColumnDefinitions="120,80,100,*" MinHeight="40">
                                <!-- Time Header -->
                                <Border Grid.Column="0" BorderBrush="#3B82F6" BorderThickness="0,0,1,0" Padding="12,10,12,10">
                                    <TextBlock Text="Time" FontFamily="Consolas" FontSize="13" FontWeight="SemiBold" Foreground="#F1F5F9" VerticalAlignment="Center"/>
                                </Border>
                                <!-- Mode Header -->
                                <Border Grid.Column="1" BorderBrush="#3B82F6" BorderThickness="0,0,1,0" Padding="12,10,12,10">
                                    <TextBlock Text="Mode" FontFamily="Consolas" FontSize="13" FontWeight="SemiBold" Foreground="#F1F5F9" VerticalAlignment="Center"/>
                                </Border>
                                <!-- Status Header -->
                                <Border Grid.Column="2" BorderBrush="#3B82F6" BorderThickness="0,0,1,0" Padding="12,10,12,10">
                                    <TextBlock Text="Status" FontFamily="Consolas" FontSize="13" FontWeight="SemiBold" Foreground="#F1F5F9" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <!-- Details Header -->
                                <Border Grid.Column="3" Padding="12,10,12,10">
                                    <TextBlock Text="Operation Details" FontFamily="Consolas" FontSize="13" FontWeight="SemiBold" Foreground="#F1F5F9" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Table Rows using ItemsControl for proper data binding -->
                        <ItemsControl ItemsSource="{Binding ActivityLogs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#2D4366" BorderThickness="0,0,0,1" Padding="0" Background="#162642">
                                        <Grid ColumnDefinitions="120,80,100,*" MinHeight="40">
                                            <!-- Time Cell -->
                                            <Border Grid.Column="0" BorderBrush="#2D4366" BorderThickness="0,0,1,0" Padding="12,10,12,10">
                                                <TextBlock Text="{Binding Time}" FontFamily="Consolas" FontSize="12" FontWeight="Medium" Foreground="#E2E8F0" VerticalAlignment="Center" LineHeight="16"/>
                                            </Border>
                                            <!-- Mode Cell -->
                                            <Border Grid.Column="1" BorderBrush="#2D4366" BorderThickness="0,0,1,0" Padding="12,10,12,10">
                                                <TextBlock Text="{Binding Mode}" FontFamily="Consolas" FontSize="12" FontWeight="SemiBold" Foreground="#60A5FA" VerticalAlignment="Center" HorizontalAlignment="Center" LineHeight="16"/>
                                            </Border>
                                            <!-- Status Cell -->
                                            <Border Grid.Column="2" BorderBrush="#2D4366" BorderThickness="0,0,1,0" Padding="12,10,12,10">
                                                <TextBlock Text="{Binding Status}" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFFFF" LineHeight="16" TextWrapping="NoWrap"/>
                                            </Border>
                                            <!-- Details Cell -->
                                            <Border Grid.Column="3" Padding="12,10,12,10">
                                                <TextBlock Text="{Binding Details}" FontFamily="Consolas" FontSize="12" Foreground="#A8B8D1" TextWrapping="Wrap" VerticalAlignment="Center" LineHeight="16"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </StackPanel>
    </Border>
    
</UserControl>
