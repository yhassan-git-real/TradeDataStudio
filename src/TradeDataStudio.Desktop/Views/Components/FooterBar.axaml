<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TradeDataStudio.Desktop.ViewModels"
             x:Class="TradeDataStudio.Desktop.Views.Components.FooterBar"
             x:DataType="vm:MainWindowViewModel">
    
    <Border Classes="footer">
        <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,4,0,0">
            <!-- Left: Connection Info -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="14" Margin="20,7">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Ellipse Width="8" Height="8" 
                            Fill="#10B981"
                            VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ConnectionStatus}" 
                               FontSize="11" 
                               FontWeight="Medium" 
                               Foreground="{DynamicResource PrimaryText}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Spacing="4" 
                           IsVisible="{Binding ConnectedServer.Length}">
                    <TextBlock Text="Server:" FontSize="10" Foreground="{DynamicResource MutedText}"/>
                    <TextBlock Text="{Binding ConnectedServer}" FontSize="10" FontWeight="Medium" Foreground="{DynamicResource PrimaryText}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Spacing="4"
                           IsVisible="{Binding ConnectedDatabase.Length}">
                    <TextBlock Text="DB:" FontSize="10" Foreground="{DynamicResource MutedText}"/>
                    <TextBlock Text="{Binding ConnectedDatabase}" FontSize="10" FontWeight="Medium" Foreground="{DynamicResource PrimaryText}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Spacing="4"
                           IsVisible="{Binding ConnectedUser.Length}">
                    <TextBlock Text="User:" FontSize="10" Foreground="{DynamicResource MutedText}"/>
                    <TextBlock Text="{Binding ConnectedUser}" FontSize="10" FontWeight="Medium" Foreground="{DynamicResource PrimaryText}"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Center: Status Message -->
            <TextBlock Grid.Column="1" 
                       Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontSize="11"
                       Foreground="{DynamicResource MutedText}"/>
                       
            <!-- Right: App Info, Version and Status -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Spacing="11" Margin="20,7">
                <!-- Application Status -->
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Ellipse Width="8" Height="8" Fill="#10B981" VerticalAlignment="Center"/>
                    <TextBlock Text="Ready" FontSize="11" Foreground="{DynamicResource PrimaryText}" FontWeight="Medium" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Version Badge -->
                <Border Background="#064E3B" BorderBrush="#10B981" BorderThickness="1" CornerRadius="6" Padding="7,3">
                    <TextBlock Text="v1.0.0" FontSize="10" FontWeight="SemiBold" Foreground="#10B981"/>
                </Border>
                
                <!-- Application Name -->
                <TextBlock Text="TradeData Studio" 
                          FontSize="10" 
                          Foreground="{DynamicResource MutedText}" 
                          FontWeight="Medium"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
    
</UserControl>
