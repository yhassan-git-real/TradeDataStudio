<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TradeDataStudio.Desktop.ViewModels"
             x:Class="TradeDataStudio.Desktop.Views.Components.ActionsPanel"
             x:DataType="vm:MainWindowViewModel">

    <Border Classes="section">
        <StackPanel Spacing="6">
            <!-- Header Section -->
            <StackPanel Spacing="3">
                <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                    <Border Width="24" Height="24" CornerRadius="12" Background="{DynamicResource MidnightBlue}" Padding="2">
                        <TextBlock Text="â¯" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Foreground="{DynamicResource ElectricBlue}" Margin="0"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="Actions" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource BrightText}"/>
                        <TextBlock Text="Execute operations and manage workflows." 
                                   FontSize="10" 
                                   Foreground="{DynamicResource SecondaryText}"/>
                    </StackPanel>
                </StackPanel>
                <Border Height="1" Background="{DynamicResource DefaultBorder}" Margin="0,0,0,0"/>
            </StackPanel>
            
            <!-- Grid Layout: 2 columns, 3 rows of buttons -->
            <Grid ColumnDefinitions="*,5,*" RowDefinitions="Auto,5,Auto,5,Auto,12,Auto" Margin="0,6,0,0">
                <!-- Row 0: Start and Stop (First Row) -->
                <Button Grid.Row="0" Grid.Column="0"
                        x:Name="StartButton"
                        Classes="success"
                        Command="{Binding StartCommand}"
                        ToolTip.Tip="Execute procedure and auto-export all output tables (Ctrl+S)"
                        HotKey="Ctrl+S"
                        Height="48"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock Text="Start" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
                <Button Grid.Row="0" Grid.Column="2"
                        x:Name="StopButton"
                        Classes="danger"
                        Command="{Binding StopCommand}"
                        ToolTip.Tip="Cancel current operation (Ctrl+Q)"
                        HotKey="Ctrl+Q"
                        Height="48"
                        Opacity="{Binding StopButtonOpacity}"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock Text="Stop" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <!-- Row 2: Execute and Download (Second Row) -->
                <Button Grid.Row="2" Grid.Column="0"
                        x:Name="ExecuteButton"
                        Classes="primary"
                        Command="{Binding ExecuteCommand}"
                        ToolTip.Tip="Execute the selected stored procedure (Ctrl+E)"
                        HotKey="Ctrl+E"
                        Height="48"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock Text="Execute" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
                <Button Grid.Row="2" Grid.Column="2"
                        x:Name="ExportButton"
                        Classes="accent"
                        Command="{Binding ExportCommand}"
                        ToolTip.Tip="Download selected table to chosen format (Ctrl+X)"
                        HotKey="Ctrl+X"
                        Height="48"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock Text="Download" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <!-- Row 4: Separator -->
                <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Height="1" Background="{DynamicResource DefaultBorder}" Margin="0,6,0,6"/>
                
                <!-- Row 6: Reset and View Logs (Third Row - Bottom) -->
                <Button Grid.Row="6" Grid.Column="0"
                        x:Name="ResetButton"
                        Classes="primary"
                        Command="{Binding ResetCommand}"
                        ToolTip.Tip="Clear all selections and reset form (Ctrl+R)"
                        HotKey="Ctrl+R"
                        Height="48"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock Text="Reset" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
                <Button Grid.Row="6" Grid.Column="2"
                        x:Name="ViewLogsButton"
                        Classes="warning"
                        Command="{Binding ViewLogsCommand}"
                        ToolTip.Tip="Open application logs (Ctrl+L)"
                        HotKey="Ctrl+L"
                        Height="48"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock Text="View Logs" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>
    </Border>

</UserControl>
