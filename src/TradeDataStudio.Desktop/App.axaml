<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TradeDataStudio.Desktop.App"
             xmlns:local="using:TradeDataStudio.Desktop"
             RequestedThemeVariant="Dark">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Views/Styles/AnimationStyles.axaml"/>
        
        <!-- Global Theme Resources -->
        <Style>
            <Style.Resources>
                <!-- Primary Backgrounds -->
                <SolidColorBrush x:Key="DeepNavyBase">#0A1628</SolidColorBrush>
                <SolidColorBrush x:Key="RichDarkBlue">#0F1D35</SolidColorBrush>
                <SolidColorBrush x:Key="MidnightBlue">#162642</SolidColorBrush>
                <SolidColorBrush x:Key="SlateBlue">#1E3456</SolidColorBrush>
                
                <!-- Gradient Accents -->
                <SolidColorBrush x:Key="ElectricBlue">#2563EB</SolidColorBrush>
                <SolidColorBrush x:Key="AzureBlue">#3B82F6</SolidColorBrush>
                <SolidColorBrush x:Key="SkyBlue">#60A5FA</SolidColorBrush>
                <SolidColorBrush x:Key="CyanAccent">#06B6D4</SolidColorBrush>
                
                <!-- Text Colors -->
                <SolidColorBrush x:Key="PrimaryText">#E2E8F0</SolidColorBrush>
                <SolidColorBrush x:Key="SecondaryText">#94A3B8</SolidColorBrush>
                <SolidColorBrush x:Key="MutedText">#64748B</SolidColorBrush>
                <SolidColorBrush x:Key="BrightText">#F1F5F9</SolidColorBrush>
                
                <!-- UI Elements -->
                <SolidColorBrush x:Key="DefaultBorder">#2D4366</SolidColorBrush>
                <SolidColorBrush x:Key="FocusBorder">#3B82F6</SolidColorBrush>
                <SolidColorBrush x:Key="DisabledColor">#475569</SolidColorBrush>
                
                <!-- Dual-Tone Gradient Brushes -->
                <!-- Background Gradients -->
                <LinearGradientBrush x:Key="BackgroundGradientDark" StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#0A1628" Offset="0"/>
                    <GradientStop Color="#0F1D35" Offset="1"/>
                </LinearGradientBrush>
                <LinearGradientBrush x:Key="BackgroundGradientMed" StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#0F1D35" Offset="0"/>
                    <GradientStop Color="#162642" Offset="1"/>
                </LinearGradientBrush>
                <LinearGradientBrush x:Key="CardGradientDual" StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#162642" Offset="0"/>
                    <GradientStop Color="#1E3456" Offset="1"/>
                </LinearGradientBrush>
                <!-- Accent Gradients -->
                <LinearGradientBrush x:Key="BlueAccentGradient" StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#1E40AF" Offset="0"/>
                    <GradientStop Color="#2563EB" Offset="1"/>
                </LinearGradientBrush>
                <LinearGradientBrush x:Key="BlueAccentGradientLight" StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#2563EB" Offset="0"/>
                    <GradientStop Color="#3B82F6" Offset="1"/>
                </LinearGradientBrush>
            </Style.Resources>
        </Style>
        
        <!-- ComboBox Dark Theme Overrides -->
        <Style Selector="ComboBoxItem">
            <Setter Property="Background" Value="#162642"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                    <BrushTransition Property="Foreground" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="ComboBoxItem:pointerover">
            <Setter Property="Background" Value="#1E3456"/>
        </Style>
        <Style Selector="ComboBoxItem:selected">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="#F1F5F9"/>
        </Style>
    </Application.Styles>
</Application>