<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TradeDataStudio.Desktop.App"
             xmlns:local="using:TradeDataStudio.Desktop"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        
        <!-- ComboBox Light Theme Overrides -->
        <Style Selector="ComboBoxItem">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#495057"/>
        </Style>
        <Style Selector="ComboBoxItem:pointerover">
            <Setter Property="Background" Value="#F8F9FA"/>
        </Style>
        <Style Selector="ComboBoxItem:selected">
            <Setter Property="Background" Value="#E7F3FF"/>
        </Style>
    </Application.Styles>
</Application>